{
    "manifest_version": 3,
    "name": "HyperExplainer",
    "version": "1.0.0",
    "description": "Explain and compare hyperparameters in any code snippet.",
    "permissions": ["storage","activeTab","scripting"],
    "host_permissions": [
    "<all_urls>",
    "http://localhost:3000/*",
    "http://127.0.0.1:3000/*",
    "http://192.168.1.224:3000/*"
    ],
    "action": { "default_popup": "popup.html" },
    "content_scripts": [
      {
        "matches": ["*://chat.openai.com/*", "<all_urls>"],
        "js": ["content.js"]
      }
    ]
}